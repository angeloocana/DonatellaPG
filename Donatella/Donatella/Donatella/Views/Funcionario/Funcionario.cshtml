@using DonatellaDomain.Entities
@model DonatellaAdmin.Models.FuncionarioViewModel

@{
    ViewBag.Title = "Funcionario";
}

<div class="bs-docs-section">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h1 id="forms">Funcionarios</h1>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <div class="well bs-component">
                @using (Html.BeginForm("Editar", "Funcionario", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()
                    <fieldset>
                        <legend>Funcionario</legend>
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(m => m.Funcionario.FuncionarioId)
                        <div class="form-group">
                            @Html.BootStrapLabelFor(m => m.Funcionario.NomeFuncionario)
                            <div class="col-lg-10">
                                @Html.EditorFor(m => m.Funcionario.NomeFuncionario)
                                @Html.ValidationMessageFor(m => m.Funcionario.NomeFuncionario)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.BootStrapLabelFor(m => m.Funcionario.CPF)
                            <div class="col-lg-10">
                                @Html.EditorFor(m => m.Funcionario.CPF)
                                @Html.ValidationMessageFor(m => m.Funcionario.CPF)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.BootStrapLabelFor(m => m.Funcionario.Email)
                            <div class="col-lg-10">
                                @Html.EditorFor(m => m.Funcionario.Email)
                                @Html.ValidationMessageFor(m => m.Funcionario.Email)
                            </div>
                        </div>


                        <div class="form-group">
                            @Html.BootStrapLabelFor(m => m.Senha)
                            <div class="col-lg-10">
                                @Html.EditorFor(m => m.Senha)
                                @Html.ValidationMessageFor(m => m.Senha)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.BootStrapLabelFor(m => m.Funcionario.Telefone)
                            <div class="col-lg-10 form-inline">
                                @Html.EditorFor(m => m.Funcionario.TelefoneDDD)
                                @Html.EditorFor(m => m.Funcionario.Telefone)
                                @Html.ValidationMessageFor(m => m.Funcionario.TelefoneDDD)
                                @Html.ValidationMessageFor(m => m.Funcionario.Telefone)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.BootStrapLabelFor(m => m.Funcionario.Celular)
                            <div class="col-lg-10 form-inline">
                                @Html.EditorFor(m => m.Funcionario.CelularDDD)
                                @Html.EditorFor(m => m.Funcionario.Celular)
                                @Html.ValidationMessageFor(m => m.Funcionario.CelularDDD)
                                @Html.ValidationMessageFor(m => m.Funcionario.Celular)
                            </div>
                        </div>


                        <div class="form-group">
                            @Html.BootStrapLabelFor(m => m.Funcionario.CEP)
                            <div class="col-lg-10">
                                @Html.EditorFor(m => m.Funcionario.CEP)
                                @Html.ValidationMessageFor(m => m.Funcionario.CEP)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.BootStrapLabelFor(m => m.Funcionario.Endereco)
                            <div class="col-lg-10">
                                @Html.EditorFor(m => m.Funcionario.Endereco)
                                @Html.ValidationMessageFor(m => m.Funcionario.Endereco)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.BootStrapLabelFor(m => m.Funcionario.Numero)
                            <div class="col-lg-10">
                                @Html.EditorFor(m => m.Funcionario.Numero)
                                @Html.ValidationMessageFor(m => m.Funcionario.Numero)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.BootStrapLabelFor(m => m.Funcionario.Complemento)
                            <div class="col-lg-10">
                                @Html.EditorFor(m => m.Funcionario.Complemento)
                                @Html.ValidationMessageFor(m => m.Funcionario.Complemento)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.BootStrapLabelFor(m => m.Funcionario.Bairro)
                            <div class="col-lg-10">
                                @Html.EditorFor(m => m.Funcionario.Bairro)
                                @Html.ValidationMessageFor(m => m.Funcionario.Bairro)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.BootStrapLabelFor(m => m.Funcionario.Cidade)
                            <div class="col-lg-10">
                                @Html.EditorFor(m => m.Funcionario.Cidade)
                                @Html.ValidationMessageFor(m => m.Funcionario.Cidade)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.BootStrapLabelFor(m => m.Funcionario.Estado)
                            <div class="col-lg-10">
                                @Html.EditorFor(m => m.Funcionario.Estado)
                                @Html.ValidationMessageFor(m => m.Funcionario.Estado)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.BootStrapLabelFor(m => m.Permissoes)
                            <div class="col-lg-10">
                                @foreach (var permissao in Enum.GetValues(typeof(Permissao)).Cast<Permissao>())
                                {
                                    <div class="checkbox">
                                        <label>

                                            <input type="checkbox" @(Model.Permissoes.Contains(permissao) ? "checked='checked'" : "") name="Permissoes" value="@permissao" />
                                            @{
                                    var description = DonatellaAdmin.infrastructure.EnumHelper<Permissao>.GetDisplayValue(permissao);
                                    @Html.DisplayFor(d => description)
                                            }
                                        </label>
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.BootStrapLabelFor(m => m.Funcionario.Ativo)
                            <div class="col-lg-10">

                                <div class="checkbox">
                                    <label>
                                        @Html.CheckBoxFor(m => m.Funcionario.Ativo)
                                        Ativo
                                    </label>
                                </div>

                            </div>
                        </div>
                        
                        <div class="form-group">
                            @Html.BootStrapLabelFor(m => m.Funcionario.Cargo.NomeCargo)
                            <div class="col-lg-10">
                                @Html.DropDownListFor(m => m.Funcionario.Cargo.CargoId, Model.Cargos, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Funcionario.Cargo.CargoId)
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-lg-10 col-lg-offset-2">
                                <button type="submit" class="btn btn-default">Salvar</button>
                            </div>
                        </div>
                    </fieldset>
                }
            </div>
        </div>
    </div>
</div>

<div class="bs-component">
    <ul class="pager">
        <li class="previous"><a href="@Url.Action("Index")">&larr; Voltar a lista</a></li>
    </ul>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
