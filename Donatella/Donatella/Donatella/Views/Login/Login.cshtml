@model Donatella.Models.LoginFormViewModel
@{
    ViewBag.Title = "Login";
}

<div class="bs-docs-section">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h1 id="forms">Bem vindo ao Donatello!!!</h1>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <div class="well bs-component">
                @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()
                    <fieldset>
                        @Html.EditorForModel()
                        <div class="form-group">
                            <div class="col-lg-10 col-lg-offset-2">
                                <button type="submit" class="btn btn-default">Entrar</button>
                                @Html.ValidationSummary()
                            </div>
                        </div>
                    </fieldset>
                }
            </div>
            <div class="well bs-component">
                <h2><a href="@Url.Action("PrimeiroAcesso","Usuario")">Cadastre-se!!!</a></h2>
            </div>
        </div>
    </div>
</div>