@model IEnumerable<Donatella.Models.Categorias.CategoriaProdutosViewModel>

@{
    ViewBag.Title = "Pedido";
}

<div class="bs-docs-section">
    @{ Html.RenderPartial("~/Views/Carrinho/Carrinho.cshtml"); }
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-lg-12">
            @foreach (var categoria in Model)
            {
                <div class="page-header">
                    <h1 id="tables">@categoria.Categoria</h1>
                </div>
                <div class="bs-component">
                    <table class="table table-striped table-hover ">
                        <thead>
                            <tr>
                                <th>Produto</th>
                                <th>Preço</th>
                                <th>Descrição</th>
                                <th>Qtd</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in categoria.Produtos)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NomeProduto)
                                    </td>
                                    <td>
                                        @if (item.PrecoDe != null)
                                        {
                                            <span class="precoDe">@item.PrecoDe</span>
                                        }
                                        @item.Preco
                                    </td>
                                    <td>
                                        @item.Descricao
                                    </td>
                                    <td>
                                        <input type="text" id="@("qtdProduto" + item.Id)" value="1" />
                                    </td>
                                    <td>
                                        <a href="javaScript:void(0);" onclick="addCarrinho(@item.Id, $('@("#qtdProduto" + item.Id)').val());" class="btn btn-success"><i class="icon-shopping-cart icon-white"></i> Adcionar ao Carrinho</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div><!-- /example -->
            }
        </div>
    </div>
</div>
