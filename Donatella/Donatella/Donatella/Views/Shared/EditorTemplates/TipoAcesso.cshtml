@using Donatella.Models.Enums
@model TipoAcesso?
@{
    var tipo = Enum.GetValues(typeof (TipoAcesso)).Cast<TipoAcesso>().Select(s => new SelectListItem
    {
        Text = s.ToString(),
        Value = s.ToString(),
        Selected = s == Model
    }).ToList();
    tipo.Add(new SelectListItem {Text = " [Selecione] ", Value = ""});
}

@Html.DropDownList("", tipo.OrderBy(s => s.Text), new { @class = "form-control" })