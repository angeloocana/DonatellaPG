@using Donatella.Models.Enums
@model Sexo?
@{
    var sexos = Enum.GetValues(typeof (Sexo)).Cast<Sexo>().Select(s => new SelectListItem
    {
        Text = EnumHelper<Sexo>.GetDisplayValue(s),
        Value = s.ToString(),
        Selected = s == Model
    }).ToList();
    sexos.Add(new SelectListItem{Text = " [Selecione] ",Value = ""});
}

@Html.DropDownList("", sexos.OrderBy(s => s.Text), new { @class = "form-control" })