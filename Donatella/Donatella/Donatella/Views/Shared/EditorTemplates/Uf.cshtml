@using Donatella.Models.Enums
@model Uf?
@{
    var lista = Enum.GetValues(typeof(Uf)).Cast<Uf>().Select(s => new SelectListItem
    {
        Text = EnumHelper<Uf>.GetDisplayValue(s),
        Value = s.ToString(),
        Selected = s == Model
    }).OrderBy(x => x.Text).ToList();
}

@Html.DropDownListFor(m => m, lista, " [Selecione] ", new { @class = "Endereco_Uf form-control" })
