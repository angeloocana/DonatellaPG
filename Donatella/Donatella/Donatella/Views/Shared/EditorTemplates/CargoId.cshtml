@using Donatella.App.Interface
@using Donatella.Models.Enums
@using StructureMap
@model int?

@{
    var app = ObjectFactory.GetInstance<ICargoApp>();
    var cargos = app.Combo().Select(c => new SelectListItem
    {
        Text = c.Value,
        Value = c.Key.ToString(),
        Selected = c.Key == Model
    }).ToList();

    cargos.Add(new SelectListItem { Text = " [Selecione] ", Value = "" });

}

@Html.DropDownList("", cargos.OrderBy(c => c.Text), new { @class = "form-control" })