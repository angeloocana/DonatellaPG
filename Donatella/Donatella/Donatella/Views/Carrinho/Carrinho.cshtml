<script type="text/javascript">
    $(document).ready(function () {
        carregarCarrinho();
    });

    function carregarCarrinho() {
        $.ajax({
            type: "POST",
            url: '@Url.Action("Carrinho", "Carrinho")',
            success: function (retorno) {
                $("#divProdutosCarrinho").html(retorno);
            }
        });
    }

    function addCarrinho(id, qtd) {
        $.ajax({
            type: "POST",
            url: '@Url.Action("Add", "Carrinho")',
            data: {
                id: id,
                qtd: qtd
            },
            success: function (retorno) {
                if (retorno == "OK")
                    retorno = "Produto adicionado ao carrinho!";
                alert(retorno);
                carregarCarrinho();
            }
        });
    }

    function removeCarrinho(id, qtd) {
        $.ajax({
            type: "POST",
            url: '@Url.Action("Remove", "Carrinho")',
            data: {
                id: id,
                qtd: qtd
            },
            success: function (retorno) {
                if (retorno == "OK")
                    retorno = "Produto removido do carrinho!";
                alert(retorno);
                carregarCarrinho();
            }
        });
    }

    function cleanCarrinho() {
        $.ajax({
            type: "POST",
            url: '@Url.Action("Clean","Carrinho")',
            success: function (retorno) {
                if (retorno == "OK")
                    retorno = "Carrinho vazio!";
                alert(retorno);
                carregarCarrinho();
            }
        });
    }
</script>

<div class="row">
    <div class="col-lg-12">

        <div class="page-header">
            <h1 id="tables">Carrinho</h1>
        </div>
        <div class="bs-component" id="divProdutosCarrinho">

        </div>
    </div>
</div>
