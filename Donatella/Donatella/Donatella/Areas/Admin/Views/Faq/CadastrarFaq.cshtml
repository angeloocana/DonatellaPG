@model Donatella.Models.FaqFormViewModel

<div id="conteudo">
    <script type="text/javascript">
        configurarPagina('', 'interna usuários', 'Cadastro de Faq');
    </script>
    <div class="principal centraliza">
        <div class="coluna-100">
            <ul class="breadcrumb">
                <li>@Html.ActionLink("Listar", "ListarFAQ", "Faq", new { @class = "ico-voltar" })</li>
                <li>
                    <h1>Cadastro de FAQs</h1>
                </li>
            </ul>
            <div class="scrollArea">
                <div class="scrollArea-content">
                    @using (Html.BeginForm("CadastrarFAQ", "Faq", FormMethod.Post, new { @class = "formulario-conteudo" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <fieldset>
                            <label for="CadastrarFAQ_Pergunta">Pergunta </label>
                            <br />
                            @Html.TextBoxFor(m => m.Pergunta, new { @class = "input-50" })
                            @Html.ValidationMessageFor(m => m.Pergunta)
                            <br />
                            <label for="CadastrarFAQ_Resposta">Resposta </label>
                            <br />
                            @Html.TextBoxFor(m => m.Resposta, new { @class = "input-50" })
                            @Html.ValidationMessageFor(m => m.Resposta)
                            <br />
                            <label for="CadastrarFAQ_Ordem">Ordem </label>
                            <br />
                            @Html.TextBoxFor(m => m.Ordem, new { @class = "input-50" })
                            @Html.ValidationMessageFor(m => m.Ordem)
                            <br />
                            <div class="col-50">
                               @Html.MyLabelFor(m => m.FaqGrupoId)
                                <br />
                                @Html.EditorFor(m => m.FaqGrupoId)
                                @Html.ValidationMessageFor(m => m.FaqGrupoId)
                                <br />
                            </div>
                            <br />
                            <div class="clear"></div>
                            <input type="submit" value="Salvar" class="botao enviar" />@Html.ValidationMessage("Erro")
                        </fieldset>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
