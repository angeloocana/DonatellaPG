@model DonatellaAdmin.Models.Produtos.ProdutoFormViewModel

@{
    ViewBag.Title = "Produto";
}

<div class="bs-docs-section">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h1 id="forms">Produtos</h1>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <div class="well bs-component">
                @using (Html.BeginForm("Editar", "Produto", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()
                    <fieldset>
                        <legend>Produto</legend>
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(model => model.ProdutoId)
                      @Html.EditorForModel()
                        <div class="form-group">
                            <div class="col-lg-10 col-lg-offset-2">
                                <button type="submit" class="btn btn-default">Salvar</button>
                            </div>
                        </div>
                    </fieldset>
                }
            </div>
        </div>
    </div>
</div>

<div class="bs-component">
    <ul class="pager">
        <li class="previous"><a href="@Url.Action("Index")">&larr; Voltar a lista</a></li>
    </ul>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
