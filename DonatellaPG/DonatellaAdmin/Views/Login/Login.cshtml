@using CaptchaMvc.HtmlHelpers
@model DonatellaAdmin.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
}

<div class="bs-docs-section">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h1 id="forms">Login</h1>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <div class="well bs-component">
                @using (Html.BeginForm("Logar", "Login", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()
                    <fieldset>
                        <div class="form-group">
                            @Html.BootStrapLabelFor(m => m.CPF)
                            <div class="col-lg-10">
                                @Html.EditorFor(m => m.CPF)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.BootStrapLabelFor(m => m.Senha)
                            <div class="col-lg-10">
                                @Html.EditorFor(m => m.Senha)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.BootStrapLabel("Captcha")
                            <div class="col-lg-10">
                                @Html.Captcha("Tentar outra imagem", "Digite o texto que você vê acima:", 5, "Captcha é obrigatório!", false, null)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-10 col-lg-offset-2">
                                <button type="submit" class="btn btn-default">Entrar</button>
                                @Html.ValidationSummary()
                            </div>
                        </div>
                    </fieldset>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">
        $(document).ready(function () {
            $('#CaptchaInputText').attr('class', 'form-control');
        });
    </script>
}
